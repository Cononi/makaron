	<!-- 3. 후기 삭제하기 -->
	<update id="deleteReview">
		<![CDATA[
			UPDATE 
			    product_review
			SET 
			   is_del = 'Y'
			WHERE
   				review_no = #{review_no}
		    ]]>
	</update>
