	<!-- 2. 후기 작성 -->
	<!-- 작성할 수 있는 후기의 상품명, 주문번호 불러오기 -->
	<select id="chooseToWrite" resultType="com.jua.makaron.vo.ProductReviewVO">
		<![CDATA[
			SELECT
			    A.*
			FROM
			    (
			    SELECT
			        p.product_title,
			        po.order_id
			    FROM
			        product_order po, product p
			    WHERE
			        po.product_id = p.product_id
			        AND po.customer_id = #{id}
			    ) A
			WHERE
			   A.order_id NOT IN(SELECT order_id from product_review where customer_id = #{id} AND is_del = 'N')
		]]>
	</select>
	
	
	<!-- 후기 작성 하기 -->
	<insert id="insertReview">
		<![CDATA[
			INSERT INTO 
			    product_review 
			VALUES
			    (
			    SEQ_PRODUCT_REVIEW.nextval, 
			    (
			     SELECT 
				    product_id
				FROM 
				    product_order
				WHERE 
				    order_id = #{review.order_id}
			    ), 
			   	#{id}, 
			    #{review.review_title}, 
			    #{review.review_content}, 
			    '0', 
			    sysdate, 
			    sysdate,
			    'N',
			    #{review.order_id}
			    )
		]]>
	</insert>
	
