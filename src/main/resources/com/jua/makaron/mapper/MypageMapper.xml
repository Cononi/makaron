	<!-- 0-1. 유저 이름 얻기 -->
	<select id="getCustomerName" resultType="com.jua.makaron.vo.CustomerVO">
		select name from customer where id = #{id}
	</select>
	
	<!-- 0-2. 유저 등급 얻기 -->
	<select id="getCustomerRating" resultType="com.jua.makaron.vo.Customer_ratingVO">
		<![CDATA[
