<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jua.makaron.mapper.ListMapper">

	<select id="getAllList" resultType="com.jua.makaron.domain.ProductVO">
		<![CDATA[
			select title, sub_title, price, sale_price from product order by id;
		]]>
	</select>

	<select id="searchAllList" resultType="com.jua.makaron.domain.ProductVO">
		<![CDATA[
			select title, sub_title, price, sale_price from product where title like '%'||#{keyword}||'%' or sub_title like '%'||#{keyword}||'%' order by id;
		]]>
	</select>
	
	<select id="PopularList" resultType="com.jua.makaron.domain.ProductVO">
		<![CDATA[
			select title, sub_title, price, sale_price from product where title like '%'||#{keyword}||'%' order by max_count DESC;
		]]>
	</select>

	<select id="LowPriceList" resultType="com.jua.makaron.domain.ProductVO">
		<![CDATA[
			select title, sub_title, price, sale_price, price - price * (sale_price/100) AS Final_price from product where title like '%'||#{keyword}||'%' order by Final_price desc;
		]]>
	</select>
	
	<select id="HighPriiceList" resultType="com.jua.makaron.domain.ProductVO">
		<![CDATA[
			select title, sub_title, price, sale_price, price - price * (sale_price/100) AS Final_price from product where title like '%마카롱%' order by Final_price;
		]]>
	</select>












	<sql id="criteria">
		<trim prefixOverrides="OR" prefix="(" suffix=") and">
			<foreach collection="typeArr" item='type'>
				<trim prefix="OR">
					<choose>
						<when test="type =='T'.toString()">
							title like '%' || #{keyword} || '%'
						</when>
						<when test="type =='C'.toString()">
							content like '%' || #{keyword} || '%'
						</when>
						<when test="type =='W'.toString()">
							writer like '%' || #{keyword} || '%'
						</when>
					</choose>
				</trim>
			</foreach>
		</trim>
	</sql>


